<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="BorderButtonWhite">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@drawable/border_button</item>
		<item name="android:textSize">14dp</item>
	</style>

	<style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
		<item name="colorControlNormal">@android:color/holo_red_dark</item>
	</style>

	<style name="TextStyleTitleToolBar">
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">@android:color/holo_red_dark</item>
		<item name="android:textSize">20sp</item>
		<item name="robotoTypeface">roboto_slab_regular</item>
	</style>
</resources>
