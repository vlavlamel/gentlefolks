<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/item_main_container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="10dp"
	android:layout_marginLeft="10dp"
	android:layout_marginRight="10dp"
	android:background="@drawable/rectangle_frame"
	android:clickable="true">

	<ImageView
		android:id="@+id/item_main_image"
		android:layout_width="match_parent"
		android:layout_height="210dp"
		android:alpha="0.6"
		android:scaleType="centerCrop" />

	<com.devspark.robototextview.widget.RobotoTextView
		android:id="@+id/item_hashtag"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:textAllCaps="true"
		android:textColor="@android:color/holo_red_dark"
		tools:text="#искусство" />

	<com.devspark.robototextview.widget.RobotoTextView
		android:id="@+id/item_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_margin="10dp"
		android:textAllCaps="true"
		android:textColor="@android:color/black"
		android:gravity="center"
		app:robotoTypeface="roboto_bold"
		tools:text="С чем связана шумиха вокруг Матильды?" />

</FrameLayout>
